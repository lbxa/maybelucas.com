---
export interface Props {
  showSlider?: boolean;
}

const { showSlider = true } = Astro.props;
import { ParticleSlider } from "@components/Particles/ParticleSlider";
import { ParticlesRenderer } from "@components/Particles/ParticlesRenderer";
---

<canvas id="webgl" transition:persist></canvas>
{showSlider && <ParticleSlider client:visible />}
<ParticlesRenderer client:load />

<style>
  canvas#webgl {
    position: fixed;
    top: 0;
    left: 0;
    outline: none;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none; /* This is crucial */
    mix-blend-mode: exclusion;
  }
</style>
